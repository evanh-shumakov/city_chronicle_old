{% extends 'base.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block body %}
    <h1>{{ news.title }}</h1>
    <p>{{ news.preview }}</p>
    <p>{{ news.content | raw }}</p>
    {% if news.sourceUrl %}
        <div class="source-url">
            Information provided on this page is originally sourced from
            <a href="{{ news.sourceUrl }}" target="_blank">{{ news.sourceUrl }}</a>.
        </div>
    {% endif %}
{% endblock %}